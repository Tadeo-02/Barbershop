{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", //necesario para compatiblidad
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["index.ts", "src/BACK/**/*"],
  "exclude": ["node_modules", "dist", "src/FRONT/**/*"]
}
